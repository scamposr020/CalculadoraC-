<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Base.TabbedPage1">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Personal" x:Name="tb1">
        <StackLayout>
            <Label Text="Hola"/>
            <Entry Placeholder="Ingrese su nombre"/>
            <Label Text="Cedula"/>
            <Entry Placeholder="Ingrese su cedula"/>
            <Button Text="Siguiente ->" x:Name="btn1"/>
        </StackLayout>
       
    </ContentPage>
    <ContentPage Title="Comm" x:Name="tb2">
        <StackLayout>
            <Label Text="Email"/>
            <Entry Placeholder="Ingrese su email"/>
            <Label Text="Cel"/>
            <Entry Placeholder="Ingrese su celular"/>
            <Button Text="Siguiente ->"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Mail">
        <Label Text="Otro"/>
    </ContentPage>
    <ContentPage Title="Save"  IsVisible="False"/>
</TabbedPage>